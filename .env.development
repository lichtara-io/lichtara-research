# Development Environment Configuration
# This file contains safe development values
# Copy to .env for local development

# =============================================================================
# Environment Settings
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
PORT=3000
APP_URL=http://localhost:3000

# =============================================================================
# OpenAI Configuration (Development)
# =============================================================================
# Use a development/test API key with limited quota
OPENAI_API_KEY=sk-proj-development-key-here
OPENAI_ORG_ID=org-dev-lichtara
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# GitHub Configuration (Development)
# =============================================================================
# Personal access token with limited scope for development
GITHUB_TOKEN=ghp_development-token-here
GITHUB_ORG=lichtara-io
GITHUB_REPO=lichtara-research

# =============================================================================
# Database Configuration (Development)
# =============================================================================
# Local development database
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/lichtara_dev
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# External APIs (Development)
# =============================================================================
# Development endpoints
FLUX_API_URL=http://localhost:3001/api
LUMORA_API_URL=http://localhost:3002/api

# Development webhook endpoint
WEBHOOK_URL=http://localhost:3000/webhooks
WEBHOOK_SECRET=dev_webhook_secret_123

# =============================================================================
# Security (Development)
# =============================================================================
# Non-production secrets
JWT_SECRET=development_jwt_secret_not_for_production
ENCRYPTION_KEY=dev_encryption_key_32_chars_long

# =============================================================================
# Email Configuration (Development)
# =============================================================================
# Use a test email service like Mailtrap
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=dev@lichtara.local

# =============================================================================
# Storage (Development)
# =============================================================================
# Local storage or development S3 bucket
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lichtara-dev-storage

# =============================================================================
# Monitoring (Development)
# =============================================================================
# Development monitoring (optional)
SENTRY_DSN=https://dev-sentry-dsn-here
ANALYTICS_ID=dev-analytics-id

# =============================================================================
# Rate Limiting (Development)
# =============================================================================
# More lenient limits for development
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# =============================================================================
# CORS (Development)
# =============================================================================
# Allow localhost origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080