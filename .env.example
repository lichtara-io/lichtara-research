# Lichtara Research - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# OpenAI Configuration
# =============================================================================
# OpenAI API key for AI models and assistants
OPENAI_API_KEY=sk-your-openai-api-key-here
# OpenAI Organization ID (optional)
OPENAI_ORG_ID=org-your-organization-id-here
# OpenAI Project ID (optional)
OPENAI_PROJECT_ID=proj_your-project-id-here

# =============================================================================
# GitHub Configuration
# =============================================================================
# GitHub Personal Access Token for GitHub API access
GITHUB_TOKEN=ghp_your-github-personal-access-token-here
# GitHub Organization name
GITHUB_ORG=lichtara-io

# =============================================================================
# Google Services Configuration
# =============================================================================
# Google API Key for various Google services
GOOGLE_API_KEY=your-google-api-key-here
# Google Cloud Service Account (path to JSON file)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# Microsoft Services Configuration
# =============================================================================
# Microsoft Graph API credentials
MICROSOFT_CLIENT_ID=your-microsoft-client-id-here
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret-here
MICROSOFT_TENANT_ID=your-microsoft-tenant-id-here

# =============================================================================
# NotebookLM / AI Services
# =============================================================================
# NotebookLM or other AI service credentials
NOTEBOOKLM_API_KEY=your-notebooklm-api-key-here
NOTION_API_TOKEN=secret_your-notion-integration-token-here

# =============================================================================
# Database Configuration
# =============================================================================
# Database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/lichtara_db
# Redis connection for caching
REDIS_URL=redis://localhost:6379

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development
# Application port
PORT=3000
# Application URL
APP_URL=http://localhost:3000

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Secret for token signing
JWT_SECRET=your-super-secret-jwt-key-here
# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key-here
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://lichtara.io

# =============================================================================
# External APIs and Services
# =============================================================================
# Custom API endpoints
FLUX_API_URL=https://api.flux.lichtara.io
LUMORA_API_URL=https://api.lumora.lichtara.io

# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_URL=https://your-app.com/webhooks

# =============================================================================
# Monitoring and Analytics
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-here
# Analytics tracking ID
ANALYTICS_ID=your-analytics-id-here

# =============================================================================
# Email Configuration
# =============================================================================
# SMTP configuration for email sending
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password-here
SMTP_FROM=noreply@lichtara.io

# =============================================================================
# Storage Configuration
# =============================================================================
# AWS S3 or compatible storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lichtara-storage

# =============================================================================
# Development Tools
# =============================================================================
# Debug mode
DEBUG=false
# Log level (error, warn, info, debug)
LOG_LEVEL=info
# API rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000